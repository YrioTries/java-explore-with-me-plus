{
  "info": {
    "name": "EWM Reviews — Working Tests",
    "description": "Тесты с корректной подготовкой данных для отзывов",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "API = class {",
          "    constructor(postman, verbose = false, baseUrl = pm.collectionVariables.get('baseUrl')) {",
          "        this.baseUrl = baseUrl;",
          "        this.pm = postman;",
          "        this._verbose = verbose;",
          "    }",
          "",
          "    async addUser(user, verbose=null) {",
          "        return this.post('/admin/users', user, 'Ошибка при добавлении пользователя', verbose);",
          "    }",
          "",
          "    async addCategory(category, verbose=null) {",
          "        return this.post('/admin/categories', category, 'Ошибка при добавлении категории', verbose);",
          "    }",
          "",
          "    async addEvent(userId, event, verbose=null) {",
          "        return this.post('/users/' + userId + '/events', event, 'Ошибка при добавлении события', verbose);",
          "    }",
          "",
          "    async publishEvent(eventId, verbose=null) {",
          "        return this.patch('/admin/events/' + eventId, {stateAction: 'PUBLISH_EVENT'}, 'Ошибка при публикации события', verbose);",
          "    }",
          "",
          "    async addParticipationRequest(userId, eventId, verbose=null) {",
          "        return this.post('/users/' + userId + '/requests?eventId=' + eventId, null, 'Ошибка при создании заявки', verbose);",
          "    }",
          "",
          "    async confirmParticipationRequest(userId, eventId, reqId, verbose=null) {",
          "        return this.patch('/users/' + userId + '/events/' + eventId + '/requests', ",
          "            {requestIds: [reqId], status: 'CONFIRMED'}, 'Ошибка при подтверждении заявки', verbose);",
          "    }",
          "",
          "    async addReview(userId, eventId, review, verbose=null) {",
          "        return this.post('/users/' + userId + '/reviews/events/' + eventId, review, 'Ошибка при добавлении отзыва', verbose);",
          "    }",
          "",
          "    async updateReview(userId, reviewId, review, verbose=null) {",
          "        return this.patch('/users/' + userId + '/reviews/' + reviewId, review, 'Ошибка при обновлении отзыва', verbose);",
          "    }",
          "",
          "    async deleteReview(userId, reviewId, eventId, verbose=null) {",
          "        return this.delete('/users/' + userId + '/reviews/' + reviewId + '/events/' + eventId, 'Ошибка при удалении отзыва', verbose);",
          "    }",
          "",
          "    async getReview(userId, reviewId, verbose=null) {",
          "        return this.get('/users/' + userId + '/reviews/' + reviewId, null, 'Ошибка при получении отзыва', verbose);",
          "    }",
          "",
          "    async getUserReviews(userId, verbose=null) {",
          "        return this.get('/users/' + userId + '/reviews', null, 'Ошибка при получении отзывов пользователя', verbose);",
          "    }",
          "",
          "    async getEventReviews(eventId, from = 0, size = 10, verbose=null) {",
          "        return this.get('/reviews/' + eventId + '?from=' + from + '&size=' + size, null, 'Ошибка при получении отзывов события', verbose);",
          "    }",
          "",
          "    async adminSearchReviews(params = {}, verbose=null) {",
          "        const query = Object.keys(params).map(key => key + '=' + params[key]).join('&');",
          "        return this.get('/admin/reviews' + (query ? '?' + query : ''), null, 'Ошибка при поиске отзывов админом', verbose);",
          "    }",
          "",
          "    async adminDeleteReview(reviewId, verbose=null) {",
          "        return this.delete('/admin/reviews/' + reviewId, 'Ошибка при удалении отзыва админом', verbose);",
          "    }",
          "",
          "    async post(path, body, errorText = 'Ошибка при выполнении post-запроса', verbose=null) {",
          "        return this.sendRequest('POST', path, body, errorText, verbose);",
          "    }",
          "",
          "    async patch(path, body = null, errorText = 'Ошибка при выполнении patch-запроса', verbose=null) {",
          "        return this.sendRequest('PATCH', path, body, errorText, verbose);",
          "    }",
          "",
          "    async get(path, body = null, errorText = 'Ошибка при выполнении get-запроса', verbose=null) {",
          "        return this.sendRequest('GET', path, body, errorText, verbose);",
          "    }",
          "",
          "    async delete(path, errorText = 'Ошибка при выполнении delete-запроса', verbose=null) {",
          "        return this.sendRequest('DELETE', path, null, errorText, verbose);",
          "    }",
          "",
          "    async sendRequest(method, path, body = null, errorText = 'Ошибка при выполнении запроса', verbose=null) {",
          "        return new Promise((resolve, reject) => {",
          "            verbose = verbose == null ? this._verbose : verbose;",
          "            const request = {",
          "                url: this.baseUrl + path,",
          "                method: method,",
          "                body: body == null ? '' : JSON.stringify(body),",
          "                header: { 'Content-Type': 'application/json' },",
          "            };",
          "",
          "            if(verbose) {",
          "                console.log('Отправляю запрос: ', request);",
          "            }",
          "",
          "            try {",
          "                this.pm.sendRequest(request, (error, response) => {",
          "                    if(error || (response.code >= 400 && response.code <= 599)) {",
          "                        let err = error ? error : JSON.stringify(response.json());",
          "                        console.error(errorText + ': ', err);",
          "                        reject(new Error(errorText + ': ' + err));",
          "                    }",
          "",
          "                    if(verbose) {",
          "                        console.log('Результат: код - ', response.code, ', тело: ', response.json());",
          "                    }",
          "",
          "                    if (response.stream.length === 0) {",
          "                        resolve(null);",
          "                    } else {",
          "                        resolve(response.json());",
          "                    }",
          "                });",
          "            } catch(err) {",
          "                if(verbose) {",
          "                    console.error(errorText, err);",
          "                }",
          "                reject(err);",
          "            }",
          "        });",
          "    }",
          "};",
          "",
          "RandomUtils = class {",
          "    constructor() {}",
          "",
          "    getUser() {",
          "        return {",
          "            name: pm.variables.replaceIn('{{$randomFullName}}'),",
          "            email: pm.variables.replaceIn('{{$randomEmail}}')",
          "        };",
          "    }",
          "",
          "    getCategory() {",
          "        return {",
          "            name: pm.variables.replaceIn('{{$randomWord}}') + Math.floor(Math.random() * 10000).toString()",
          "        };",
          "    }",
          "",
          "    getEvent(categoryId) {",
          "        // Создаем событие в прошлом (для возможности оставить отзыв)",
          "        const pastDate = new Date();",
          "        pastDate.setDate(pastDate.getDate() - 1); // событие 1 день назад",
          "        ",
          "        return {",
          "            annotation: 'Тестовое событие для отзывов',",
          "            category: categoryId,",
          "            description: 'Описание тестового события',",
          "            eventDate: pastDate.toISOString().replace('T', ' ').substring(0, 19),",
          "            location: {",
          "                lat: 55.7558,",
          "                lon: 37.6173,",
          "            },",
          "            paid: false,",
          "            participantLimit: 10,",
          "            requestModeration: false,",
          "            title: 'Тестовое событие ' + Math.floor(Math.random() * 1000),",
          "        };",
          "    }",
          "",
          "    getReview() {",
          "        const texts = [",
          "            'Отличное мероприятие! Организация на высшем уровне.',",
          "            'Интересный контент, спасибо организаторам!',",
          "            'Понравилась атмосфера и выступающие.',",
          "            'Хорошо организовано, буду рекомендовать друзьям.',",
          "            'Полезный опыт, узнал много нового.'",
          "        ];",
          "        return {",
          "            text: texts[Math.floor(Math.random() * texts.length)]",
          "        };",
          "    }",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "default"
    }
  ],
  "item": [
    {
      "name": "00 Sanity",
      "item": [
        {
          "name": "Healthcheck",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "pm.test('Статус UP', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('UP');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/actuator/health"
          }
        }
      ]
    },
    {
      "name": "01 Подготовка тестовых данных",
      "item": [
        {
          "name": "Создание пользователей, события и заявки",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const main = async () => {",
                  "    const api = new API(pm);",
                  "    const rnd = new RandomUtils();",
                  "",
                  "    try {",
                  "        console.log('Создаем организатора...');",
                  "        const initiator = await api.addUser(rnd.getUser());",
                  "        ",
                  "        console.log('Создаем участника...');",
                  "        const participant = await api.addUser(rnd.getUser());",
                  "        pm.collectionVariables.set('userId', participant.id);",
                  "        ",
                  "        console.log('Создаем категорию...');",
                  "        const category = await api.addCategory(rnd.getCategory());",
                  "        ",
                  "        console.log('Создаем событие в прошлом...');",
                  "        const event = await api.addEvent(initiator.id, rnd.getEvent(category.id));",
                  "        pm.collectionVariables.set('eventId', event.id);",
                  "        ",
                  "        console.log('Публикуем событие...');",
                  "        await api.publishEvent(event.id);",
                  "        ",
                  "        console.log('Создаем заявку на участие...');",
                  "        const request = await api.addParticipationRequest(participant.id, event.id);",
                  "        ",
                  "        console.log('Подтверждаем заявку...');",
                  "        await api.confirmParticipationRequest(initiator.id, event.id, request.id);",
                  "        ",
                  "        console.log('✅ Все данные подготовлены!');",
                  "        console.log('User ID:', participant.id);",
                  "        console.log('Event ID:', event.id);",
                  "        ",
                  "    } catch(err) {",
                  "        console.error('❌ Ошибка при подготовке данных:', err.message);",
                  "        throw err;",
                  "    }",
                  "};",
                  "",
                  "const interval = setInterval(() => {}, 1000);",
                  "setTimeout(async () => {",
                  "    try {",
                  "        await main();",
                  "    } catch (e) {",
                  "        console.error('Fatal error:', e);",
                  "    } finally {",
                  "        clearInterval(interval);",
                  "    }",
                  "}, 100);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Данные подготовлены', () => {",
                  "    const userId = pm.collectionVariables.get('userId');",
                  "    const eventId = pm.collectionVariables.get('eventId');",
                  "    pm.expect(userId).to.not.be.undefined;",
                  "    pm.expect(eventId).to.not.be.undefined;",
                  "    console.log('User ID:', userId);",
                  "    console.log('Event ID:', eventId);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/actuator/health"
          }
        }
      ]
    },
    {
      "name": "10 Private - Создание и управление отзывами",
      "item": [
        {
          "name": "Создание отзыва",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Статус 201 - Отзыв создан', () => pm.response.to.have.status(201));",
                  "    pm.test('Отзыв содержит обязательные поля', () => {",
                  "        pm.expect(response).to.have.property('id');",
                  "        pm.expect(response).to.have.property('text');",
                  "        pm.expect(response).to.have.property('authorId');",
                  "        pm.expect(response).to.have.property('eventId');",
                  "        pm.expect(response).to.have.property('createdOn');",
                  "    });",
                  "    ",
                  "    // Сохраняем ID созданного отзыва",
                  "    pm.collectionVariables.set('reviewId', response.id);",
                  "    console.log('✅ Создан отзыв с ID:', response.id);",
                  "} else {",
                  "    console.log('❌ Ответ:', pm.response.text());",
                  "    pm.test('Эндпоинт доступен', () => {",
                  "        pm.expect(pm.response.code).to.not.be.oneOf([404, 500]);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Отличное мероприятие! Организация на высшем уровне.\"\n}"
            },
            "url": "{{baseUrl}}/users/{{userId}}/reviews/events/{{eventId}}"
          }
        },
        {
          "name": "Получение созданного отзыва",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Статус 200 - Отзыв найден', () => pm.response.to.have.status(200));",
                  "    pm.test('Данные корректны', () => {",
                  "        pm.expect(response.id).to.equal(parseInt(pm.collectionVariables.get('reviewId')));",
                  "        pm.expect(response.authorId).to.equal(parseInt(pm.collectionVariables.get('userId')));",
                  "        pm.expect(response.eventId).to.equal(parseInt(pm.collectionVariables.get('eventId')));",
                  "        pm.expect(response.text).to.equal('Отличное мероприятие! Организация на высшем уровне.');",
                  "    });",
                  "} else {",
                  "    console.log('Ответ:', pm.response.text());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        },
        {
          "name": "Обновление текста отзыва",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Статус 200 - Отзыв обновлен', () => pm.response.to.have.status(200));",
                  "    pm.test('Текст обновлен', () => {",
                  "        pm.expect(response.text).to.equal('Обновленный текст отзыва: еще лучше!');",
                  "        pm.expect(response).to.have.property('lastUpdatedOn');",
                  "    });",
                  "} else {",
                  "    console.log('Ответ:', pm.response.text());",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Обновленный текст отзыва: еще лучше!\"\n}"
            },
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        }
      ]
    },
    {
      "name": "20 Public - Публичные эндпоинты",
      "item": [
        {
          "name": "Получение отзывов события",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "const reviews = pm.response.json();",
                  "pm.test('Массив отзывов', () => pm.expect(reviews).to.be.an('array'));",
                  "if (reviews.length > 0) {",
                  "    pm.test('Отзывы содержат данные', () => {",
                  "        pm.expect(reviews[0]).to.have.property('id');",
                  "        pm.expect(reviews[0]).to.have.property('text');",
                  "    });",
                  "    console.log('Найдено отзывов:', reviews.length);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/reviews/{{eventId}}?from=0&size=10"
          }
        }
      ]
    }
  ]
}