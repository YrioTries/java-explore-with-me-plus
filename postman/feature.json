{
  "info": {
    "name": "EWM Reviews — Enhanced Tests",
    "description": "Улучшенные тесты для отзывов с автоматической генерацией данных",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "API = class {",
          "    constructor(postman, verbose = false, baseUrl = pm.collectionVariables.get('baseUrl')) {",
          "        this.baseUrl = baseUrl;",
          "        this.pm = postman;",
          "        this._verbose = verbose;",
          "    }",
          "",
          "    async addUser(user, verbose=null) {",
          "        return this.post('/admin/users', user, 'Ошибка при добавлении пользователя', verbose);",
          "    }",
          "",
          "    async addCategory(category, verbose=null) {",
          "        return this.post('/admin/categories', category, 'Ошибка при добавлении категории', verbose);",
          "    }",
          "",
          "    async addEvent(userId, event, verbose=null) {",
          "        return this.post('/users/' + userId + '/events', event, 'Ошибка при добавлении события', verbose);",
          "    }",
          "",
          "    async publishEvent(eventId, verbose=null) {",
          "        return this.patch('/admin/events/' + eventId, {stateAction: 'PUBLISH_EVENT'}, 'Ошибка при публикации события', verbose);",
          "    }",
          "",
          "    async addReview(userId, eventId, review, verbose=null) {",
          "        return this.post('/users/' + userId + '/events/' + eventId + '/reviews', review, 'Ошибка при добавлении отзыва', verbose);",
          "    }",
          "",
          "    async updateReview(userId, reviewId, review, verbose=null) {",
          "        return this.patch('/users/' + userId + '/reviews/' + reviewId, review, 'Ошибка при обновлении отзыва', verbose);",
          "    }",
          "",
          "    async deleteReview(userId, reviewId, verbose=null) {",
          "        return this.delete('/users/' + userId + '/reviews/' + reviewId, 'Ошибка при удалении отзыва', verbose);",
          "    }",
          "",
          "    async getReview(userId, reviewId, verbose=null) {",
          "        return this.get('/users/' + userId + '/reviews/' + reviewId, null, 'Ошибка при получении отзыва', verbose);",
          "    }",
          "",
          "    async getUserReviews(userId, verbose=null) {",
          "        return this.get('/users/' + userId + '/reviews', null, 'Ошибка при получении отзывов пользователя', verbose);",
          "    }",
          "",
          "    async getEventReviews(eventId, params = null, verbose=null) {",
          "        const query = params ? '?' + new URLSearchParams(params).toString() : '';",
          "        return this.get('/events/' + eventId + '/reviews' + query, null, 'Ошибка при получении отзывов события', verbose);",
          "    }",
          "",
          "    async adminSearchReviews(params = null, verbose=null) {",
          "        const query = params ? '?' + new URLSearchParams(params).toString() : '';",
          "        return this.get('/admin/reviews' + query, null, 'Ошибка при поиске отзывов админом', verbose);",
          "    }",
          "",
          "    async adminDeleteReview(reviewId, verbose=null) {",
          "        return this.delete('/admin/reviews/' + reviewId, 'Ошибка при удалении отзыва админом', verbose);",
          "    }",
          "",
          "    async post(path, body, errorText = 'Ошибка при выполнении post-запроса', verbose=null) {",
          "        return this.sendRequest('POST', path, body, errorText, verbose);",
          "    }",
          "",
          "    async patch(path, body = null, errorText = 'Ошибка при выполнении patch-запроса', verbose=null) {",
          "        return this.sendRequest('PATCH', path, body, errorText, verbose);",
          "    }",
          "",
          "    async get(path, body = null, errorText = 'Ошибка при выполнении get-запроса', verbose=null) {",
          "        return this.sendRequest('GET', path, body, errorText, verbose);",
          "    }",
          "",
          "    async delete(path, errorText = 'Ошибка при выполнении delete-запроса', verbose=null) {",
          "        return this.sendRequest('DELETE', path, null, errorText, verbose);",
          "    }",
          "",
          "    async sendRequest(method, path, body = null, errorText = 'Ошибка при выполнении запроса', verbose=null) {",
          "        return new Promise((resolve, reject) => {",
          "            verbose = verbose == null ? this._verbose : verbose;",
          "            const request = {",
          "                url: this.baseUrl + path,",
          "                method: method,",
          "                body: body == null ? '' : JSON.stringify(body),",
          "                header: { 'Content-Type': 'application/json' },",
          "            };",
          "",
          "            if(verbose) {",
          "                console.log('Отправляю запрос: ', request);",
          "            }",
          "",
          "            try {",
          "                this.pm.sendRequest(request, (error, response) => {",
          "                    if(error || (response.code >= 400 && response.code <= 599)) {",
          "                        let err = error ? error : JSON.stringify(response.json());",
          "                        console.error(errorText + ': ', err);",
          "                        reject(new Error(errorText + ': ' + err));",
          "                    }",
          "",
          "                    if(verbose) {",
          "                        console.log('Результат: код - ', response.code, ', тело: ', response.json());",
          "                    }",
          "",
          "                    if (response.stream.length === 0) {",
          "                        resolve(null);",
          "                    } else {",
          "                        resolve(response.json());",
          "                    }",
          "                });",
          "            } catch(err) {",
          "                if(verbose) {",
          "                    console.error(errorText, err);",
          "                }",
          "                reject(err);",
          "            }",
          "        });",
          "    }",
          "};",
          "",
          "RandomUtils = class {",
          "    constructor() {}",
          "",
          "    getUser() {",
          "        return {",
          "            name: pm.variables.replaceIn('{{$randomFullName}}'),",
          "            email: pm.variables.replaceIn('{{$randomEmail}}')",
          "        };",
          "    }",
          "",
          "    getCategory() {",
          "        return {",
          "            name: pm.variables.replaceIn('{{$randomWord}}') + Math.floor(Math.random() * 10000).toString()",
          "        };",
          "    }",
          "",
          "    getEvent(categoryId) {",
          "        return {",
          "            annotation: 'Тестовое событие для отзывов',",
          "            category: categoryId,",
          "            description: 'Описание тестового события',",
          "            eventDate: this.getFutureDateTime(24), // событие через 24 часа",
          "            location: {",
          "                lat: 55.7558,",
          "                lon: 37.6173,",
          "            },",
          "            paid: false,",
          "            participantLimit: 10,",
          "            requestModeration: false,",
          "            title: 'Тестовое событие ' + Math.floor(Math.random() * 1000),",
          "        };",
          "    }",
          "",
          "    getReview(eventId) {",
          "        const texts = [",
          "            'Отличное мероприятие! Организация на высшем уровне.',",
          "            'Интересный контент, спасибо организаторам!',",
          "            'Понравилась атмосфера и выступающие.',",
          "            'Хорошо организовано, буду рекомендовать друзьям.',",
          "            'Полезный опыт, узнал много нового.'",
          "        ];",
          "        return {",
          "            text: texts[Math.floor(Math.random() * texts.length)]",
          "        };",
          "    }",
          "",
          "    getFutureDateTime(hourShift = 1) {",
          "        const date = new Date();",
          "        date.setHours(date.getHours() + hourShift);",
          "        return date.toISOString().replace('T', ' ').substring(0, 19);",
          "    }",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "default"
    },
    {
      "key": "userId",
      "value": "",
      "type": "default"
    },
    {
      "key": "eventId",
      "value": "",
      "type": "default"
    },
    {
      "key": "reviewId",
      "value": "",
      "type": "default"
    },
    {
      "key": "adminReviewId",
      "value": "",
      "type": "default"
    }
  ],
  "item": [
    {
      "name": "00 Sanity",
      "item": [
        {
          "name": "Healthcheck",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "pm.test('Статус UP', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.equal('UP');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/actuator/health"
          }
        }
      ]
    },
    {
      "name": "10 Private - Авторские действия",
      "item": [
        {
          "name": "Создание отзыва",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const main = async () => {",
                  "    const api = new API(pm);",
                  "    const rnd = new RandomUtils();",
                  "",
                  "    try {",
                  "        const user = await api.addUser(rnd.getUser());",
                  "        pm.collectionVariables.set('userId', user.id);",
                  "        const category = await api.addCategory(rnd.getCategory());",
                  "        const event = await api.addEvent(user.id, rnd.getEvent(category.id));",
                  "        await api.publishEvent(event.id);",
                  "        pm.collectionVariables.set('eventId', event.id);",
                  "    } catch(err) {",
                  "        console.error('Ошибка при подготовке тестовых данных:', err);",
                  "    }",
                  "};",
                  "",
                  "const interval = setInterval(() => {}, 1000);",
                  "setTimeout(async () => {",
                  "    try {",
                  "        await main();",
                  "    } catch (e) {",
                  "        console.error(e);",
                  "    } finally {",
                  "        clearInterval(interval);",
                  "    }",
                  "}, 100);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 201', () => pm.response.to.have.status(201));",
                  "pm.test('Ответ в формате JSON', () => pm.response.to.be.json);",
                  "",
                  "const response = pm.response.json();",
                  "pm.test('Отзыв содержит обязательные поля', () => {",
                  "    pm.expect(response).to.have.property('id');",
                  "    pm.expect(response).to.have.property('text');",
                  "    pm.expect(response).to.have.property('authorId');",
                  "    pm.expect(response).to.have.property('eventId');",
                  "    pm.expect(response).to.have.property('created');",
                  "});",
                  "",
                  "pm.test('ID автора и события корректны', () => {",
                  "    pm.expect(response.authorId).to.equal(parseInt(pm.collectionVariables.get('userId')));",
                  "    pm.expect(response.eventId).to.equal(parseInt(pm.collectionVariables.get('eventId')));",
                  "});",
                  "",
                  "pm.collectionVariables.set('reviewId', response.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Отличное мероприятие! Организация на высшем уровне.\"\n}"
            },
            "url": "{{baseUrl}}/users/{{userId}}/events/{{eventId}}/reviews"
          }
        },
        {
          "name": "Получение отзыва по ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "",
                  "const response = pm.response.json();",
                  "pm.test('Данные корректны', () => {",
                  "    pm.expect(response.id).to.equal(parseInt(pm.collectionVariables.get('reviewId')));",
                  "    pm.expect(response.authorId).to.equal(parseInt(pm.collectionVariables.get('userId')));",
                  "    pm.expect(response.eventId).to.equal(parseInt(pm.collectionVariables.get('eventId')));",
                  "    pm.expect(response.text).to.not.be.empty;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        },
        {
          "name": "Обновление текста отзыва",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "",
                  "const response = pm.response.json();",
                  "pm.test('Текст обновлен', () => {",
                  "    pm.expect(response.text).to.equal('Обновленный текст отзыва: еще лучше!');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Обновленный текст отзыва: еще лучше!\"\n}"
            },
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        },
        {
          "name": "Получение всех отзывов пользователя",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "pm.test('Массив отзывов', () => {",
                  "    const reviews = pm.response.json();",
                  "    pm.expect(reviews).to.be.an('array');",
                  "    pm.expect(reviews.length).to.be.at.least(1);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users/{{userId}}/reviews"
          }
        },
        {
          "name": "Удаление отзыва",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 204', () => pm.response.to.have.status(204));",
                  "pm.test('Нет тела ответа', () => pm.response.to.have.noBody);"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        },
        {
          "name": "Проверка удаления (ожидается 404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 404', () => pm.response.to.have.status(404));"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/users/{{userId}}/reviews/{{reviewId}}"
          }
        }
      ]
    },
    {
      "name": "20 Public - Публичные эндпоинты",
      "item": [
        {
          "name": "Получение отзывов события с пагинацией",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const main = async () => {",
                  "    const api = new API(pm);",
                  "    const rnd = new RandomUtils();",
                  "",
                  "    try {",
                  "        // Создаем несколько отзывов для тестирования пагинации",
                  "        const user1 = await api.addUser(rnd.getUser());",
                  "        const user2 = await api.addUser(rnd.getUser());",
                  "        const category = await api.addCategory(rnd.getCategory());",
                  "        const event = await api.addEvent(user1.id, rnd.getEvent(category.id));",
                  "        await api.publishEvent(event.id);",
                  "        ",
                  "        // Создаем несколько отзывов",
                  "        await api.addReview(user1.id, event.id, rnd.getReview(event.id));",
                  "        await api.addReview(user2.id, event.id, rnd.getReview(event.id));",
                  "        ",
                  "        pm.collectionVariables.set('eventId', event.id);",
                  "    } catch(err) {",
                  "        console.error('Ошибка при подготовке тестовых данных:', err);",
                  "    }",
                  "};",
                  "",
                  "const interval = setInterval(() => {}, 1000);",
                  "setTimeout(async () => {",
                  "    try {",
                  "        await main();",
                  "    } catch (e) {",
                  "        console.error(e);",
                  "    } finally {",
                  "        clearInterval(interval);",
                  "    }",
                  "}, 100);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Статус 200', () => pm.response.to.have.status(200));",
                  "pm.test('Массив отзывов', () => {",
                  "    const reviews = pm.response.json();",
                  "    pm.expect(reviews).to.be.an('array');",
                  "    if (reviews.length > 0) {",
                  "        pm.expect(reviews[0]).to.have.property('id');",
                  "        pm.expect(reviews[0]).to.have.property('text');",
                  "        pm.expect(reviews[0]).to.have.property('author');",
                  "        pm.expect(reviews[0]).to.have.property('event');",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/events/{{eventId}}/reviews?from=0&size=10"
          }
        }
      ]
    }
  ]
}